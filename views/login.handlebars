<div class="login-box">
    <h2 style="text-align: center;">LOGIN</h2>

    <form class="form login-form" style="display: flex; flex-direction: column; align-items: center;">
        <div class="form-group" style="width: 100%;">
            <label for="username-login">USERNAME:</label>
            <input class="form-input" type="text" id="username-login" placeholder="Username" />
        </div>
        <div class="form-group" style="width: 100%;">
            <label for="password-login">PASSWORD:</label>
            <input class="form-input" type="password" id="password-login" placeholder="Password" />
        </div>
        <div class="form-group" style="display: flex; flex-direction: column; align-items: center; width: 100%;">
            <p>Need an account? <a href="/signup">Click here to sign up!</a></p>
            <div class="remember-me">
                <input type="checkbox" name="remember" id="remember" {{#if remember}}checked{{/if}}>
                <label for="remember" style="margin-left: 5px;">REMEMBER ME</label>
            </div>
            <button class="btn btn-primary" type="submit">LOGIN</button>
        </div>
    </form>
</div>


        <script src="js/login.js"></script>